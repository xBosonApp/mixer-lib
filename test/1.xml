<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_jar" name="Create Runnable Jar for Project sim">
	<!--this file was created by Eclipse Runnable JAR Export Wizard	-->
	<!--ANT 1.7 is required											-->

	<!--jar输出路径													-->
	<property name="outdir" 		value="${basedir}"/>
	
	<!-- <property name="utf8_srcdir" 	value="${basedir}/utf8-src"/> --> 
	<property name="src_dir" 		value="${basedir}/WEB-INF/src"/>
	<property name="class_dir" 		value="${basedir}/WEB-INF/classes"/>
	
	
	<target name="create_jar">
		<copy todir="${basedir}/WEB-INF/classes/jym/" overwrite="true">
			<fileset file="${basedir}/readme.txt"/>
		</copy>
		<!-- 编码转换
		<copy todir="${utf8_srcdir}" overwrite="true" outputencoding='UTF-8' encoding="GBK">
			<fileset dir="${src_dir}"/>
		</copy>
		-->
		<jar destfile="${outdir}/sim.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="jym.sim.test.util.Main"/>
				<attribute name="Class-Path" value="."/>
			</manifest>

			<fileset dir="${class_dir}">
				<include name="**"/>
				<exclude name="**/*!secure*"/>
			</fileset>
		<!-- jar是否包含源代码 -->
		<!--<fileset dir="${src_dir}"/>-->
		</jar>
		
	</target>

</project>
